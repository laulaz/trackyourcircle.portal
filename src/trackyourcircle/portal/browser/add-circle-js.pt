     <script type="text/javascript">
        var search = function() {
            var city = $('#form-widgets-city').val();
            var square = $('#form-widgets-location').val();
            if (city.trim() != '' || square.trim() != '') {
                var address = city.trim() + ' ' + square.trim();
                $('.pat-leaflet').trigger('leaflet.geosearch', address);
            }
        };
        jQuery(document).ready(function($) {
            $('#form-buttons-search').click(function(evt) {
                evt.preventDefault();
                search();
            });
            $('.pat-leaflet').on('leaflet.afterinit', search);
        });
    </script>
